<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/Black"
    android:gravity="top"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="2"
            android:background="@drawable/logoffs"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:text="Company"
            android:textColor="@color/White"
            android:textAlignment="center"
            android:textSize="40dp"
            android:gravity="center"
            android:textStyle="bold"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:text="Cadastrar Aluno"
            android:id="@+id/btnCadastrarAluno"
            />
        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:text="Pesquisar Aluno"
            android:id="@+id/btnPesquisarAluno"
            />
        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:text="Editar      Aluno"
            android:id="@+id/btnEditarAluno"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            />
    </LinearLayout>
</LinearLayout>